                        <form id="form" class="contact-form" class="row needs-validation" novalidate>
                            <div class="form-row container d-flex flex-column">
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="text" id="company" name="contact[company]"
                                        required>
                                    <label for="company" class="form-label">*Full name or company name</label>
                                </div>
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="email" id="email" name="contact[email]" required>
                                    <label for="email" class="form-label">*Email</label>
                                </div>
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="number" step="0.01" id="number" name="contact[number]"
                                        required>
                                    <label for="number" class="form-label">*Telephone number</label>
                                </div>
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="text" id="subject" name="contact[subject]"
                                        required>
                                    <label for="subject" class="form-label">*Subject</label>
                                </div>
                                <p id="transport" class="align-self-center">Transport:</p>
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="text" id="from" name="contact[from]" required>
                                    <label for="from" class="form-label">*From</label>
                                </div>
                                <div class="col-lg-5 align-self-center">
                                    <input class="form-control" type="text" id="to" name="contact[to]" required>
                                    <label for="to" class="form-label">*To</label>
                                </div>
                            </div>
                            <div class="form-row mt-4 mb-4">
                                <label for="message" class="form-label">*Shipment description</label>
                                <textarea class="form-control" id="message" cols="36" rows="8" name="contact[message]"
                                    required></textarea>
                            </div>
                            <div class="form-row mb-4">
                                <div class="form group col-md-12 text-center">
                                    <button class="btn btn-lg btn-danger" type="submit" id="submit" value="Send Message"
                                        disabled>Send request</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
